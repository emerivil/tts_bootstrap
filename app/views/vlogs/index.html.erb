<h1>Listing vlogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Year founded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vlogs.each_with_index do |vlog, i| 
        css = "odd"

        if i.even?
          css = "even"
        end

    %>

    <tr class="<%=CSS%>"> 

    %>
        <td><%= vlog.name %></td>
        <td><%= vlog.description %></td>
        <td><%= date.current.year - vlog.year_founded %></td>
        <td><%= link_to 'Show', vlog %></td>
        <td><%= link_to 'Edit', edit_vlog_path(vlog) %></td>
        <td><%= link_to 'Destroy', vlog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    

